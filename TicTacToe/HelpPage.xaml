<Page x:Class="TicTacToe.HelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelpPage">



    <DockPanel LastChildFill="True">

        <StackPanel>
            
            <TextBlock 
                Margin="100,100,0,0"
                Style="{StaticResource MenuText}" 
                Text="To start new game - click menu Game - New Game"/>
            <TextBlock 
                Margin="100,0,0,0"
                Style="{StaticResource MenuText}" 
                Text="To save game - click menu Game - Save Game"/>
            <TextBlock 
                Margin="100,0,0,0"
                Style="{StaticResource MenuText}" 
                Text="To load saved game - click menu Game - Load Game"/>
            <TextBlock 
                Margin="100,0,0,80"
                Style="{StaticResource MenuText}" 
                Text="To change game settings - click menu Options"/>

            <Button Width="150" Content="OK" Click="Button_Click" />

        </StackPanel>
    </DockPanel>

</Page>
